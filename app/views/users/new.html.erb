<%provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">

  <div>
    <%= form_with(model: @user,local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </p>
     <p>
       <%= f.label :password %>
       <%= f.password_field :password %>
     </p>

      <%= f.submit "Sign up", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>