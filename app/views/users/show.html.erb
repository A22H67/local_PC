<%provide(:title, @user.name) %>
<%= render 'layouts/header' %>

<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>, <%= @user.email %>
</h1>
<div>
  <% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol>
      <%= render @microposts %>
    </ol>
  <% end %>
</div>