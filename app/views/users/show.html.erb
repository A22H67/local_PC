<%provide(:title, @user.name) %>
<%= render 'layouts/header' %>

<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>, <%= @user.email %>
</h1>
<section>
  <%= render 'shared/stats' %>
</section>
<div>
  <%= render 'follow_form' if logged_in? %>
  <% if @user.microposts.any? %>
  <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol>
      <%= render @microposts %>
    </ol>
  <% end %>
</div>