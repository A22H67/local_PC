<div>
  <%= form_with(model: @user,local: true) do |f| %>
    <%= render 'shared/error_messages' %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>

  <% end %>
</div>